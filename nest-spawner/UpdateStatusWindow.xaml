<Window x:Class="nest_spawner.UpdateStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nest_spawner"
        mc:Ignorable="d"
        Title="Dargon Update Status" SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow" SnapsToDevicePixels="True" >
   <Grid Margin="12,12">
      <Grid.RowDefinitions>
         <RowDefinition />
         <RowDefinition />
      </Grid.RowDefinitions>
      <local:UpdateStatusView Grid.Row="0" Margin="0,0,0,12"></local:UpdateStatusView>
      <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
         <Button Padding="8,4" Margin="12,0,0,0" IsEnabled="false">Start Dargon</Button>
      </StackPanel>
   </Grid>
</Window>
